<!DOCTYPE html>
<html>
<head>
  <title>TourVibes - Virtual Real Estate Tours</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "icons", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="google-site-verification" content="PhOoMOAk1vqE-WKXgJ1ukEFEVfPRk_sbao1XTJJuXzw" />
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="header_inner standard_width">
        <a href="/"><%= image_tag 'logo.png', :style => 'margin-top:1px;', :border => 0 %></a>
        <div class="top_nav">

          <% if not @user %>
            <a href="/" <% if @page == "home"%>class="selected"<% end %>>Home</a>

            <% if @page == "home" %>
              <a href="#" id="how_link">How it Works</a>
              <a href="#" id="feature_link">Features</a>
              <!--
              <a href="#" id="pricing_link">Pricing</a>
              -->
            <% else %>
              <a href="/home/how" id="how_link">How it Works</a>
              <a href="/home/features" id="feature_link">Features</a>
              <!--
              <a href="/home/pricing" id="pricing_link">Pricing</a>
              -->
            <% end %>
          <% end %>
          <% if @user %>
            <% if @user.is_super_admin %>
              <a <% if @page == "admin"%>class="selected"<% end %> href="/admin">Admin</a>
            <% end %>
            <a href="/tours" <% if @page == "my"%>class="selected"<% end %>>My Tours</a>
            <a href="/tour/new" <% if @page == "new"%>class="selected"<% end %>>New Tour</a>
            <a href="/account" <% if @page == "account"%>class="selected"<% end %>>Account</a>
            <a href="/contact" <% if @page == "contact"%>class="selected"<% end %>>Contact</a>
	    <%= link_to "Logout", sessions_path, method: :delete %>

          <% else %>
          <a href="/contact" <% if @page == "contact"%>class="selected"<% end %>>Contact</a>
	  <%= link_to "Login", new_session_path %>
          <% end %>
        </div>
      </div>
    </div> <!-- ends header -->
    <% if @page == 'home' %>
    <div class="home_top">
      <div class="home_top_inner standard_width">


          <div style="float:right;">
            <%= image_tag 'home_example_small.png', :style => 'border-radius:4px;margin-top:-30px;margin-right:40px;' %>
          </div>


          <h1>Create a virtual tour for just $10.</h1>
          <h3>Your first 5 tours are <span style="text-decoration:underline;">FREE</span>. No card required.</h3>
          <div style="height:20px;">&nbsp;</div>
          <a href="/start" class="gray_button">Get Started &nbsp;<%= image_tag 'buttons/gray_arrow.png' %></a>
          <a href="http://2100Windsor.tourvibes.com/" class="blue_button button" style="margin-left:15px;color:white;">View Example</a>


      </div>
      <div style="clear:both;height:0">&nbsp;</div>

    </div>

<style>
.client_list img {
  margin-left:4.5%;
  float:left;
  margin-top:20px;
}
</style>


<div style="background:#d8d8d8" align="center">
  <div class="client_list standard_width" style="text-align:left;min-height:84px;height:auto;">

    <h2 style="font-weight:normal;display:inline;margin-top:25px;float:left;">Our Clients</h2>

    <%= image_tag 'clients/1.png' %>
    <%= image_tag 'clients/2.png' %>
    <%= image_tag 'clients/3.png' %>
    <%= image_tag 'clients/4.png', :style => 'margin-top:8px;' %>
    <%= image_tag 'clients/5.png', :style => 'margin-top:8px;margin-left:5.5%' %>

  </div>

  <div style="clear:both;height:0">&nbsp;</div>
</div>

    <% end %>
    <div class="content">
      <div class="inner_content standard_width">
        <%= yield %>
        <div style="clear:both;height:0;">&nbsp;</div>
      </div>
    </div>
    <div style="clear:both;height:0;">&nbsp;</div>

    <div style="height:150px;">&nbsp;</div>



  </div> <!-- ends container -->



  <div class="footer">
    <div class="footer_inner standard_width">
      <div style="float:left;margin-right:50px;">
        <a href="/">Home</a>
        <% if @page == "home" %>
          <a href="#" id="how_link">How it Works</a>
          <a href="#" id="feature_link">Features</a>
        <% else %>
          <a href="/home/how" id="how_link">How it Works</a>
          <a href="/home/features" id="feature_link">Features</a>
        <% end %>
      </div>
      <div style="float:left;">
        <a href="/contact">Contact</a>
        <a href="/login">Login</a>
        <a href="/about">About</a>
      </div>
    </div>
  </div>

</body>

</html>
