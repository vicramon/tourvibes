<style>
input.login_text {
  font-size:18px;
  width:300px;
}


input[type=submit] {
  width:305px;
  padding-top:6px;
  padding-bottom:8px;
  margin-top:4px;
}

label {
  padding-right:6px;
  font-size:16px;
}
</style>


<div class="center_form_box">

<h4 style="margin-left:0px;">Get Started with TourVibes</h4>

<div style="height:10px;">&nbsp;</div>
<% if flash[:error] %>
<div class="error">
  Sorry, but your email or password is incorrect.
</div>

<% end %>

<%= form_for user do %>
  <label>Your Email:</label><%= text_field_tag 'email', '', :class => 'login_text', :style => 'margin-bottom:4px;' %><br />
  <label>Create a Password:</label><%= password_field_tag 'password', '', :class => 'login_text' %><br />
  <%= submit_tag 'Register', :class => 'gray_button submit', :style => 'margin-left:167px;' %>
<% end %>
</div>

<script type="text/javascript">
  $('#email').focus();
</script>
