<h4>
	My Tours
	<a href="/tour/new" class="gray_button small_button" style="margin-left:15px;">New Tour</a>
</h4>

<table cellspacing=0 cellpadding=12 style="width:100%;margin-top:-6px;margin-left:-8px;">
	<tr style="font-size:17px;">
		<th>Address</td>
		<th>Status</td>
		<th>Actions</td>
	</tr>

<% i = 1 %>
<% for @tour in @tours %>
	
	<tr style="<% if i % 2 == 0 %>background:#DCE7EE;<% end %>height:40px;">
		<td><a href="<%= @tour.edit_path %>"><%= @tour.address_1 %></a></td>
		<td><%= @tour.status %></td>
		<td><a href="/tour/<%= @tour.id.to_s %>/publish">Publish</a> &nbsp;|&nbsp;
			<a href="<%= @tour.edit_path %>">Edit</a> &nbsp;|&nbsp;
			<a href="/tour/<%= @tour.id.to_s %>/preview">Preview</a>
		</td>
	</tr>
	
	<% i +=1 %>
<% end %>



</table>