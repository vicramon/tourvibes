<%= render :partial => "edit" %>

<h6>Upload a custom music file or select one of our preloaded tracks</h6> <p>
<%= form_tag @tour.edit_music_path, :multipart => true do %>
<label>Preloaded Track:</label><%= select_tag 'music_file', options_for_select(House::SONGS,@tour.music_file), :class => 'login_text select_tag' %>
<a href="#" id="preview" style="<% if @tour.music_file == nil %>display:none;<% end %>margin-left:5px;">Preview Song</a>
<br />
	<label>Custom Music File:</label> <%= file_field_tag 'music', :class => 'login_text' %><br />
	<label>Autoplay:</label><%= select_tag 'autoplay_music', options_for_select([['yes',true],['no',false]],@tour.autoplay_music), :class => 'login_text select_tag' %><br />

	<label> </label>
	<%= submit_tag 'Save Changes', :class => 'gray_button small_button', :style => 'width:auto;'%>
	
	<%= submit_tag 'Save & Go to Next Step Â»', :class => 'gray_button blue_button small_button', :style => 'width:auto;'%>
<% end %>


<% if @tour.has_music %>
<br /><br />
	<label><strong>Current Track:</strong></label><%= @tour.music_name %><br />
<% end %>


<audio id="music_player">
  <source src="<%= @tour.music_src %>" type="audio/mpeg">
  <embed height="50" width="100" src="<%= @tour.music_src %>">
</audio>


<script type="text/javascript">

var song = $('#music_player').get(0);

$(function() {
     $("#music_file").change(function(e) {
       e.preventDefault();
		if ($('#music_file option:selected').val() != "") {
	   		$('#preview').show();
	
			var playme = document.getElementById('music_player');
			playme.src='http://s3.amazonaws.com/tour_files/tracks/' + $('#music_file option:selected').val() + '.mp3'; 
			playme.load();
			
	
	
	
		//	$(song).attr('src','http://s3.amazonaws.com/tour_files/tracks/' + $('#music_file option:selected').val() + '.mp3');
		} else {
			$('#preview').hide();
		}
		
     });
   });

$(function() {
     $("#preview").click(function(e) {
       e.preventDefault();
       song.play();
     });
   });

</script>

